<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_trip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="qbecker.cartracker.AddTripActivity"
>

    <EditText
        android:id="@+id/addTripDescriptionEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Description" />

    <EditText
        android:id="@+id/addTripDateEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addTripSaveButton"
        android:layout_alignLeft="@+id/addTripDescriptionEditText"
        android:layout_alignStart="@+id/addTripDescriptionEditText"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:inputType="date"
        android:text="12/12/2001" />

    <Button
        android:id="@+id/addTripSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addTripDescriptionEditText"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/addTripDescriptionEditText"
        android:layout_marginBottom="112dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="Save" />

    <Button
        android:id="@+id/addTripCancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addTripSaveButton"
        android:layout_alignBottom="@+id/addTripSaveButton"
        android:layout_alignEnd="@+id/addTripDescriptionEditText"
        android:layout_alignRight="@+id/addTripDescriptionEditText"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:text="Cancel" />

    <EditText
        android:id="@+id/addTripMilesEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="number"
        android:text="Miles"
        android:layout_below="@+id/addTripDescriptionEditText"
        android:layout_alignLeft="@+id/addTripDescriptionEditText"
        android:layout_alignStart="@+id/addTripDescriptionEditText" />

    <EditText
        android:id="@+id/addTripCostEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="Cost"
        android:layout_above="@+id/addTripDateEditText"
        android:layout_alignLeft="@+id/addTripDateEditText"
        android:layout_alignStart="@+id/addTripDateEditText"
        android:layout_marginBottom="17dp" />
</RelativeLayout>
